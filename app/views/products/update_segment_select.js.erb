<% options=raw("<option value='"+params[:id]+"'></option>") %>
<% @categories.each do |c| %>
	<% options=options+raw("<option value='"+c.id.to_s+"'>"+c.id.to_s+": "+c.title+"</option>") %>
<% end %>
$("#family").html("<%=options%>")
$("#commodity_family").show()
$("#commodity_class").hide()
$("#commodity_commodity").hide()
$('#product_category_id').val(<%=params[:id]%>)


