<table class="list">
  <tr>
  	<th>Action</th>
    <th>Name</th>
    <th>Description</th>
    <th>Manufacturer</th>
    <th>Category</th>
  </tr>

<% @products.each do |product| %>
  <tr>
  	<td><%= link_to 'Show', product %>
    | <%= link_to 'Edit', edit_product_path(product), :class=>"fancybox" %>
    | <%= link_to 'Destroy', product, confirm: 'Are you sure?', method: :delete %>
    | <%= link_to 'Follow (-'+product.price().to_s+' points)',"/products/"+product.id.to_s+"/follow", :class=>"fancybox"%></td>
    <td><%= product.name %></td>
    <td><%= product.description %></td>
    <td><%= product.manufacturer %></td>
    <td><%= product.category.id.to_s+": "+product.category.title %></td>
  </tr>
<% end %>
<%= will_paginate @products %>



</table>
