
<%= form_for @product, :remote => true do |f| %>
  <% if @product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
      <% @product.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <%= f.label "UNSPSC *" %><br />
 <div class="field" id="commodity_segment">
    <%= select_tag 'segment', options_for_select(@categories.collect{ |c| [c.id.to_s+': '+c.title, c.id] }.insert(0, '')), :style => "width:600px" %>
  </div>
  <div class="field" id="commodity_family" style="display:none">
    <%= select_tag 'family', options_for_select([""].insert(0, '')), :style => "width:600px" %>
  </div>
  <div class="field" id="commodity_class" style="display:none">
    <%= select_tag 'myClass', options_for_select([""].insert(0, '')), :style => "width:600px" %>
  </div>
  <div class="field" id="commodity_commodity" style="display:none">
    <%= select_tag 'commodity', options_for_select([""].insert(0, '')), :style => "width:600px" %>
  </div>
 
  <div class="field">
    <%= f.label :category_id %><br />
    <%= f.text_field :category_id %>
  </div>
  
  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :description %><br />
    <%= f.text_field :description %>
  </div>
  <div class="field">
    <%= f.label :manufacturer %><br />
    <%= f.text_field :manufacturer %>
  </div>

  
<div class="duplicates"></div>

<div class="validatedDuplicates" style="display:none;">
  	<%= check_box_tag :validated_duplicates, params[:validated_duplicates] %> Check if you still want to create this product.
  </div>
  
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>


