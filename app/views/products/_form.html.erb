
<%= form_for @product, :remote => true do |f| %>
  <% if @product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
      <% @product.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <%= f.label "Category *" %><br />
 <div class="field" id="commodity_segment">
    <%= select_tag 'segment', options_for_select(@segments.collect{ |s| [s.segment_title, s.segment_id] }.insert(0, '')) %>
  </div>
  <div class="field" id="commodity_family">
    <%= select_tag 'family', options_for_select([""].insert(0, '')) %>
  </div>
  <div class="field" id="commodity_class">
    <%= select_tag 'myClass', options_for_select([""].insert(0, '')) %>
  </div>
  <div class="field" id="commodity_commodity">
    <%= select_tag 'commodity', options_for_select([""].insert(0, '')) %>
  </div>
 
  <div class="field">
    <%= f.label :commodity %><br />
    <%= f.text_field :commodity %>
  </div>
  
  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :description %><br />
    <%= f.text_field :description %>
  </div>
  <div class="field">
    <%= f.label :manufacturer %><br />
    <%= f.text_field :manufacturer %>
  </div>

  
<div class="duplicates"></div>

<div class="validatedDuplicates" style="display:none;">
  	<%= check_box_tag :validated_duplicates, params[:validated_duplicates] %> Check if you still want to create this product.
  </div>
  
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>


